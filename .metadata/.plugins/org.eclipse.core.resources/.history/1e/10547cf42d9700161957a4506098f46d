package com.aries.controllers;

@Controller
@RequestMapping(value = "/api/test")
public class QuizController {

	@Transactional(readOnly = true)
	@ResponseBody
	@RequestMapping(value = "/{consultantId}", method = RequestMethod.GET)
	public ConsultantWs get(@PathVariable Long consultantId) {
		Consultant consultant = consultantRepository.get(consultantId);
		return new ConsultantToConsultantWs().apply(consultant);
	}
	
}
